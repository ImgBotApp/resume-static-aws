/* Localweather Types */

export type ApiParams = {|
  'lat': number;
  'lon': number;
  'units': string;
  'APPID': string;
|}

export type Coordinates = {|
  longitude: number;
  latitude: number;
|}

declare type Coords = {|
  lon: number;
  lat: number;
|}

declare type Sys = {|
  population: number;
|}

declare type Measurement = {|
  '3h': number;
|}

declare type Clouds = {| 
  all: number 
|}

export type City = {|
  population: number;
  id: number;
  coord: Coords;
  name: string;
  country: string;
  sys: Sys; 
|}

export type Temperatures = {|
  temp: number;
  temp_min: number;
  temp_max: number;
  pressure: number;
  sea_level: number;
  grnd_level: number;
  humidity: number;
  temp_kf: number;
|}

export type WeatherReport = {|
  id: number;
  main: string;
  description: string;
  icon: string;
|} 

export type Wind = {|
  speed: number;
  deg: number;
|}

export type Forecast = {|
  dt: number;
  main: Temperatures;
  weather: Array<WeatherReport>;
  clouds: Clouds;
  wind: Wind;
  rain: ?Measurement;
  snow: ?Measurement;
  sys: Sys;
  dt_txt: string;
|}

export type DailyTemperature = {
  celsius: number;
  farenheit: number;
}

export type DailyForecast = {|
  icon: string;
  rain: ?number;
  snow: ?number;
  description: string;
  weather: string;
  cloud: number;
  date: number;
  temp: DailyTemperature
|}

export type WeatherResponse = {|
  now: Date;
  city: string;
  forecasts: Array<DailyForecast>;
|}

export type Daily= {|
  icon: string;
  rain: ?number;
  snow: ?number;
  description: string;
  weather: string;
  cloud: number;
  day: string;
  time: string;
  temp: DailyTemperature
|}

export type Weather = {|
  now: Date;
  city: string;
  forecasts: Array<Daily>;
|}

export type FiveDayForecast = {|
  city: City;   
  cod: string;
  message: number;
  cnt: number;
  list: Array<Forecast>;
|}
