export type FiveDayForecast = {|
  city: City;   
  cod: string;
  message: number;
  cnt: number;
  list: Array<Forecast>;
|}

export type RawJSON = {|
  city: mixed;   
  cod: mixed;
  message: mixed;
  cnt: mixed;
  list: Array<mixed>;
|}