					div.card-content
						p.title.centered-text Work

	section#languages.hero.is-fullheight
		div.hero-head
			div.container

		div.hero-body
			div.container
				div.card
					div.card-content
						p.title.centered-text Languages

	section#skills.hero.is-fullheight
		div.hero-head
			div.container

		div.hero-body
			div.container
				div.card
					div.card-content
						p.title.centered-text Skills

	section#interests.hero.is-fullheight
		div.hero-head
			div.container

